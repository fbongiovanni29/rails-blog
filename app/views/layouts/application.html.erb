<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<ul class="nav nav-pills">
		<li role="presentation" class="active"><%= link_to "Home", root_path %></li>
		<li role="presentation"><%= link_to "Profile", users_path %></li>
		<li role="presentation"><%= link_to "Post", new_post_path %></li>
	</ul>

	<% if current_user %>
		Signed in as a <%=current_user.name%> | <%= link_to "Logout", '/logout' %>
        <% else %>
		<%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
	<%end%>
<%= yield %>
	</div>
</body>
</html>
